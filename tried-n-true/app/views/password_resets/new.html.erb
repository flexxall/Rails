<div class="d-flex align-items-center justify-content-center">
  <h1>Forgot your password ?</h1>  
</div>
<div class="d-flex align-items-center justify-content-center">
  <h5>Enter your email to get a password reset link sent to you.</h5>
</div>

<%= form_with url: password_reset_path do |form| %>

  <div class="container col-4 mx-auto">
      <div class="mt-2 mb-3">        
        <%= form.text_field :email, placeholder: "email@example.com", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.submit "Reset Password", class: "shadow btn btn-warning" %>
      </div>
    </div>

<% end %>