<div class="container text-center mb-3 fs-1">
  <span>Recipes</span>
</div>
<div id="recipes" class="row justify-content-center">
  <% @recipes.each do |recipe| %>    
    <div class="col-sm-5 p-0">    
      <div class="card-body">
        <%= render recipe %>        
      </div>   
    </div>    
  <% end %>
</div>
