<% if flash[:notice] %>
  <div class="row justify-content-center">
    <div class="col-10 col-md-8 col-lg-5">
      <div class="alert alert-info alert-dismissible fade show shadow text-center border-1 mb-3" role="alert">
        <%= flash[:notice] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="row justify-content-center">
    <div class="col-10 col-md-8 col-lg-5">
      <div class="alert alert-warning alert-dismissible fade show shadow text-center border-1 mb-3" role="alert">
        <%= flash[:alert] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
  </div>
<% end %>
<% if flash[:danger] %>
  <div class="row justify-content-center">
    <div class="col-10 col-md-8 col-lg-5">
      <div class="alert alert-danger alert-dismissible fade show shadow text-center border-1 mb-3" role="alert">
        <%= flash[:danger] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
  </div>
<% end %>