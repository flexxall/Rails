<div class="grid grid-rows-1 auto-rows-max text-center mx-auto mb-3">  
    <div class="row">
      <div class="text-6xl text-indigo-700">
        Welcome to the Show
        <% if Current.user %>
          <span class="text-sm float-right shadow bg-green-50 text-green-500 px-3 font-medium rounded-lg">
            Logged in as: <%= Current.user.username %>
          </span>
        <% end %>
      </div>
    </div> 
</div>

<div class="flex place-content-center mb-3 text-indigo-700">
  <%= link_to "About Us", about_path, class: "mx-2 my-2 bg-white transition duration-150 ease-in-out hover:bg-gray-100 hover:text-indigo-600 rounded border border-indigo-700 text-indigo-700 px-6 py-2 text-sm font-bold focus:outline-none focus:ring-2 focus:ring-offset-2  focus:ring-indigo-700" %>
  <%= link_to "Projects", projects_path, class: "mx-2 my-2 bg-white transition duration-150 ease-in-out hover:bg-gray-100 hover:text-indigo-600 rounded border border-indigo-700 text-indigo-700 px-6 py-2 text-sm font-bold focus:outline-none focus:ring-2 focus:ring-offset-2  focus:ring-indigo-700" %>
  <%= link_to "Sign Up", sign_up_path, class: "mx-2 my-2 bg-white transition duration-150 ease-in-out hover:bg-gray-100 hover:text-indigo-600 rounded border border-indigo-700 text-indigo-700 px-6 py-2 text-sm font-bold focus:outline-none focus:ring-2 focus:ring-offset-2  focus:ring-indigo-700" %>
  <%= link_to "Sign In", sign_in_path, class: "mx-2 my-2 bg-white transition duration-150 ease-in-out hover:bg-gray-100 hover:text-indigo-600 rounded border border-indigo-700 text-indigo-700 px-6 py-2 text-sm font-bold focus:outline-none focus:ring-2 focus:ring-offset-2  focus:ring-indigo-700" %>
  <%= button_to "Logout", logout_path, method: :delete, class: "mx-2 my-2 bg-white transition duration-150 ease-in-out hover:bg-gray-100 hover:text-indigo-600 rounded border border-indigo-700 text-indigo-700 px-6 py-2 text-sm font-bold focus:outline-none focus:ring-2 focus:ring-offset-2  focus:ring-indigo-700" %>
</div>

